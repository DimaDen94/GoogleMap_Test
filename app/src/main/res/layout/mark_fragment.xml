<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload a picture from the gallery"
        android:id="@+id/btn_gallery"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="10sp"
        android:background="@color/primery" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload a picture from the url"
        android:id="@+id/btn_url"
        android:layout_below="@+id/btn_gallery"
        android:layout_centerHorizontal="true"
        android:background="@color/primery" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tvLocationLatitude"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btn_url"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tvLocationLongitude"
        android:layout_below="@+id/tvLocationLatitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img"
        android:layout_below="@+id/btn_url"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />



</RelativeLayout>
